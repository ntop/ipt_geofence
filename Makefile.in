CXX=@CXX@ -std=c++11

PLATFORM = `uname -p`
HERE=$(shell pwd)

CPPFLAGS= -O2 @INCS@ @CFLAGS@ # -g
CFLAGS=$(CPPFLAGS)

TARGET=ipt_geofence
LIBS=@LDFLAGS@ @LIBS@


OBJECTS = Blacklists.o Configuration.o  GeoIP.o  NwInterface.o NtopCloud.o  Trace.o  Utils.o ZMQ.o BannedIpLogger.o
HEADERS = $(wildcard *.h)

all: $(TARGET) zmqReceiver

$(TARGET): $(OBJECTS) main.o
	$(CXX) $(CPPFLAGS) $(OBJECTS) main.o -o ipt_geofence $(LIBS)

zmqReceiver: zmqReceiver.cpp Utils.o Trace.o Makefile
	$(CXX) $(CPPFLAGS) zmqReceiver.cpp -o zmqReceiver Utils.o Trace.o $(LIBS)

%.o: %.cpp $(HEADERS) Makefile
	$(CXX) $(CPPFLAGS) -c $< -o $@

clean:
	/bin/rm -rf *~ *~ *.o $(TARGET)

cleanall: clean
	/bin/rm -rf config.h autom4te.cache/ config.* configure $* Makefile

